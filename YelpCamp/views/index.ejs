<% include ./partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand picked camp grounds from around the world</p>
            <p>
                <a class="btn btn-primary btn=lg" href ="/index/new" >Add new Campground</a>
            </p>
        </div>
    </header>
    <div class= "row" style="display:flex; flex-wrap:wrap;">
            
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 com-sm-6">
                <div class="thumbnail">
                    <img src="<%=campground.image %>">
                    <div class="caption text-center">
                        <h4><%= campground.name %> </h4>
                    </div>
                    <p>
                        <a href="/index/<%=campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
            </div>
            </div>
        <% }) %>
    </div>
</div>
<% include ./partials/footer %>